<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 完全允许所有HTTP明文流量 - 开发环境专用 -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>

    <!-- 调试模式 - 覆盖所有安全检查 -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>