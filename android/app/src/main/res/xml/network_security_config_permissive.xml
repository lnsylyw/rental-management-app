<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 完全允许所有HTTP明文流量 - 仅用于开发环境 -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- 调试配置 - 允许所有域名和IP -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>
